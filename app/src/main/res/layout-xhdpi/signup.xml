<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seoul">


    <RelativeLayout
        android:id="@+id/tour_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_centerInParent="true">



        <TextView
            android:id="@+id/login_sticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/signup"
            android:textSize="@dimen/text_size_20"
            android:layout_marginTop="@dimen/margin_16"
            android:textStyle="bold|italic"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_below="@+id/login_sticker">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Username"
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/margin_8"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColorHint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:layout_below="@+id/username_input"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Password"
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/margin_8"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColorHint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/password_input">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password"
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/margin_8"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColorHint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/confirm_password_input"
            android:layout_marginBottom="@dimen/margin_50"
            android:background="@drawable/edittextshape">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/margin_8"
                android:inputType="textEmailAddress"
                android:hint="@string/Email"
                android:textStyle="bold"
                android:textColorHint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_below="@+id/tour_app"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/check"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_register"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textStyle="italic|bold"
        android:layout_marginBottom="@dimen/margin_16"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>