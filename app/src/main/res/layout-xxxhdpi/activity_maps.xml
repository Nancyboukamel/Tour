<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_controller"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_50"/>

    <com.wunderlist.slidinglayer.SlidingLayer
        android:id="@+id/rightmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:layout_marginBottom="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        slidingLayer:offsetDistance="20dp"
        slidingLayer:changeStateOnTap="false"
        slidingLayer:stickTo="right">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <ExpandableListView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:divider="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/view"
                android:layout_toLeftOf="@+id/endview"
                android:dividerHeight="@dimen/divider_height"
                android:layout_gravity="right|end"
                android:layout_toEndOf="@+id/view"
                android:layout_toStartOf="@+id/endview" />

            <View
                android:id="@+id/endview"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </com.wunderlist.slidinglayer.SlidingLayer>


    <com.wunderlist.slidinglayer.SlidingLayer
        android:id="@+id/slidingLayer2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        slidingLayer:offsetDistance="50dp"
        slidingLayer:changeStateOnTap="false"
        slidingLayer:stickTo="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <RelativeLayout
               android:id="@+id/toolbar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"/>

           </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:background="@color/colorAccent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </RelativeLayout>


        </RelativeLayout>

    </com.wunderlist.slidinglayer.SlidingLayer>

</android.support.v4.widget.DrawerLayout>
