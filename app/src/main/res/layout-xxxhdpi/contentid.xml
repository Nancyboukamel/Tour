<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/bigtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_below="@+id/mainText"
        android:text="@string/big_category"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_30"
        android:textStyle="bold|italic" />


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bigtext"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/spinner"/>

    <TextView
        android:id="@+id/mediumtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_below="@+id/spinner"
        android:text="@string/medium_category"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/margin_30"
        android:textStyle="bold|italic" />


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/mediumspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/mediumtext"
        android:background="@drawable/spinner"/>

    <TextView
        android:id="@+id/smalltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediumspinner"
        android:text="@string/small_category"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold|italic"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/smallspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smalltext"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/spinner"/>



    <TextView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go"
        android:layout_below="@+id/smallspinner"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="@dimen/margin_50"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/colorPrimary"/>



</RelativeLayout>